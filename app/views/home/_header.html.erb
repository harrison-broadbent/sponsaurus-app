<div class="header">
  <div class="header__left-align">
    <p class="font-semibold">Sponsaurus</p>
    <%= link_to 'Home', root_path, class: 'nav-item' %>
  </div>
  <div class="header__right-align">
    <% if user_signed_in? %>
      <%= link_to current_user.name, user_path(current_user), class: 'nav-item'  %>
      <%= link_to 'Sign out', destroy_user_session_path, method: :delete, class: 'nav-item' %>
    <% else %>
      <%= link_to "Sign in with Google.", omniauth_authorize_path(:user, :google_oauth2), method: :post %><br />
  <% end %>
  </div>
</div>