<!-- This example requires Tailwind CSS v2.0+ -->
<div class="block sm:hidden bg-white shadow overflow-hidden rounded-md mb-6">
  <ul role="list" class="divide-y divide-gray-200">
    <li class="flex justify-between items-center bg-gray-50 pl-6 py-3 text-left text-xs font-medium text-gray-800 uppercase tracking-wider">
      <%= if !@table_title.nil?
            @table_title.pluralize
          else
            slots == @future_slots ? "Future slots:" : "Past slots:"
          end %>
      <% if current_user_owns_newsletter? @newsletter and slots == @future_slots %>
        <%= render 'embed_dropdown', slot_types: @newsletter.slot_types, type: "mobile" %>
      <% end %>
    </li>
    <%  slots.each do |slot| %>
      <%= render 'slot_information_card_mobile_row', slot: slot %>
    <% end %>
  </ul>
</div>
