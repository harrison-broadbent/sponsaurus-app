<!-- Partial for the cards used to display newsletter booking slots -->
<!-- expired indicates whether a slot publish_date has already passed-->

<!-- desktop display -->
<div class="hidden sm:block flex flex-col my-4">
  <div class="my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
    <div class="align-middle inline-block min-w-full sm:px-6 lg:px-8">
      <div class="shadow overflow-hidden border-b border-gray-200 sm:rounded-md">
        <table class="min-w-full divide-y divide-gray-200">
          <thead>
            <tr class="bg-gray-50">
              <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-800 uppercase tracking-wider">
                <%= if !@table_title.nil?
                      @table_title.pluralize
                    else
                      slots == @future_slots ? "Future slots:" : "Past slots:"
                    end %>
              </th>
              <th></th>
              <th></th>
              <th></th>
              <th class="flex justify-end">
                <% if current_user_owns_newsletter? @newsletter and slots == @future_slots %>
                  <%= render 'embed_dropdown', slot_types: @newsletter.slot_types, type: "desktop" %>
                <% end %>
              </th>
            </tr>
          </thead>
          <tr class="bg-grey-500">
            <th scope="col" class="px-6 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Date
            </th>
            <th scope="col" class="px-2 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Price
            </th>
            <th scope="col" class="px-2 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Type
            </th>
            <th scope="col" class="px-2 sm:px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
              Status
            </th>
            <th scope="col" class="relative px-6 py-3">
              <span class="sr-only">Actions</span>
            </th>
          </tr>
          <tbody class="bg-white divide-y divide-gray-200 flex-1 md:flex-none">
            <%  slots.each do |slot| %>
              <%= render 'slot_information_card_row', slot: slot %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

