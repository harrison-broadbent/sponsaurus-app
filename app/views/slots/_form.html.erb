<%= form_with(model: slot, url: [@newsletter, @slot]) do |form| %>
  <% if slot.errors.any? %>
    <%= render 'layouts/form_alert', errors: slot.errors %>
  <% end %>

  <div class="space-y-6">
    <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
      <div class="md:grid md:grid-cols-3 md:gap-6">
        <div class="md:col-span-1">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Add a Slot</h3>
          <p class="mt-1 text-sm text-gray-500">
            Create a new sponsorship slot for <%= @newsletter.name %>.
          </p>
        </div>

        <div class="mt-5 md:mt-0 md:col-span-2">
          <div class="grid grid-cols-3 gap-6">
            <div class="col-span-3 sm:col-span-2 my-2">
              <div>
                <%= form.label "Price", class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1 relative rounded-md shadow-sm">
                  <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                      <span class="text-gray-500 sm:text-sm">
                        $
                      </span>
                  </div>
                  <%= form.text_field :price, class: "focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-7 pr-12 sm:text-sm border-gray-300 rounded-md", placeholder: "49", autocomplete: "off" %>
                </div>
              </div>
            </div>
          </div>

          <div class="mt-5 md:mt-0 md:col-span-2">
            <div class="grid grid-cols-3 gap-6">
              <div class="col-span-3 sm:col-span-2 my-2">
                <div>
                  <%= form.label "Slot type", class: "block text-sm font-medium text-gray-700" %>
                  <%= form.select :slot_type_id, @slot_type_options, {}, { class: "mt-1 block w-full pl-3 pr-10 py-2 text-base border-gray-300 focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 sm:text-sm rounded-md" } %>
                </div>
              </div>
            </div>

            <div>
              <%= form.label "Publish Date", class: "block text-sm font-medium text-gray-700" %>
              <div class="mt-1 relative rounded-md shadow-sm">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                  <!-- Heroicon name: solid/mail -->
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"/>
                  </svg>
                </div>
                <%= form.date_field :publish_date, class: "focus:ring-indigo-500 focus:border-indigo-500 block w-full pl-10 sm:text-sm border-gray-300 rounded-md" %>
              </div>
            </div>

          </div>
        </div>
      </div>

      <div class="mt-8 flex justify-end">
        <%= link_to 'Back', :back, class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
        <%= form.submit "Add new slot", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
      </div>
    </div>
  </div>

<% end %>

<script>

    document.getElementById("slot_slot_type_id").onchange = function() {
        if (this.value === "new") {
            window.location.href = "<%= new_slot_type_path %>"
        }
    }

</script>
