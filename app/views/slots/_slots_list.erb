<!-- Render the list of slots, showing only future slots to a viewer. -->

<% @future_slots.each do |slot| %>
  <%= render 'slot_information', slot: slot %>
<% end %>

<% if @past_slots %>
  <hr>
  <% @past_slots.each do |slot| %>
    <%= render 'slot_information', slot: slot %>
  <% end %>
<% end %>