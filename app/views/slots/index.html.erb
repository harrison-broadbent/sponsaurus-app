<p id="notice"><%= notice %></p>

<h1>Slots</h1>
<h2>Newsletter: <%= @newsletter.name %></h2>

<% @slots.each do |slot| %>
  <%= render 'slot_information', slot: slot %>
<% end %>

<% if current_user_owns_slot? @slots.first %>
  <%= link_to 'New Slot', new_newsletter_slot_path(@newsletter, @slot) %>
<% end %>

