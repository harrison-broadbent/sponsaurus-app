<%= render 'newsletters/newsletter_information', newsletter: @newsletter, no_buttons?: true %>
<%= render 'slots_list', :locals => { :future_slots => @future_slots, :past_slots => @past_slots } %>

<div class="flex flex-col sm:flex-row justify-items-stretch justify-start py-4">
  <% if current_user_owns_newsletter? @newsletter %>
    <%= link_to new_newsletter_slot_path(@newsletter, @slot), class: "inline-flex items-center justify-center mx-4 sm:mx-0 sm:mr-4 my-2 px-4 py-2 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" do %>
      New Slot
      <svg xmlns="http://www.w3.org/2000/svg" class="mx-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 14v6m-3-3h6M6 10h2a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2zm10 0h2a2 2 0 002-2V6a2 2 0 00-2-2h-2a2 2 0 00-2 2v2a2 2 0 002 2zM6 20h2a2 2 0 002-2v-2a2 2 0 00-2-2H6a2 2 0 00-2 2v2a2 2 0 002 2z" />
      </svg>
    <% end %>
    
    <button id="button__embed-link" type="button" class="mx-4 sm:mx-0 sm:mr-4 my-2 inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-gray-500">
      Embed this page
      <svg xmlns="http://www.w3.org/2000/svg" class="mx-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 20l4-16m4 4l4 4-4 4M6 16l-4-4 4-4" />
      </svg>
    </button>
  <% end %>

  <button id="button__share-link" type="button" class="mx-4 sm:mx-0 sm:mr-4 my-2 inline-flex items-center justify-center px-4 py-2 border border-gray-300 shadow-sm text-sm font-medium rounded-md text-gray-700 bg-white hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-100 focus:ring-gray-500">
    Share a link to this page
    <svg xmlns="http://www.w3.org/2000/svg" class="mx-1 h-4 w-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.684 13.342C8.886 12.938 9 12.482 9 12c0-.482-.114-.938-.316-1.342m0 2.684a3 3 0 110-2.684m0 2.684l6.632 3.316m-6.632-6l6.632-3.316m0 0a3 3 0 105.367-2.684 3 3 0 00-5.367 2.684zm0 9.316a3 3 0 105.368 2.684 3 3 0 00-5.368-2.684z" />
    </svg>
  </button>

</div>


<%= javascript_pack_tag 'slots.js' %>
