<%= form_with(model: slot_type) do |form| %>
  <% if slot_type.errors.any? %>
    <%= render 'layouts/form_alert', errors: slot_type.errors %>
  <% end %>

  <div class="space-y-6">
    <div class="bg-white shadow px-4 py-5 sm:rounded-lg sm:p-6">
      <div class="md:grid md:grid-cols-3 md:gap-6">
        <div class="md:col-span-1">
          <h3 class="text-lg font-medium leading-6 text-gray-900">Add a Slot type</h3>
          <p class="mt-1 text-sm text-gray-500">
            Create a new type of sponsorship slot for <%= @newsletter.name %>.
          </p>
        </div>


        <div class="mt-5 md:mt-0 md:col-span-2">
          <div class="grid grid-cols-3 gap-6">
            <div class="col-span-3 sm:col-span-2 my-2">
              <div>
                <%= form.label "Name", class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1 flex rounded-md shadow-sm">
                  <%= form.text_field :name, placeholder: "Example: Classified Ad", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
                </div>
              </div>
            </div>
          </div>

          <div class="mt-5 md:mt-0 md:col-span-2">
            <div class="grid grid-cols-3 gap-6">
              <div class="col-span-3 sm:col-span-2 my-2">
                <div>
                  <%= form.label "Description", class: "block text-sm font-medium text-gray-700" %>
                  <div class="mt-1">
                    <%= form.text_area :description, placeholder: "Example: Short text classifieds with a link. 160 characters max.", class: "shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 rounded-md" %>
                  </div>
                  <p class="mt-2 text-sm text-gray-500">
                    Give us details. Character limits, images etc.
                  </p>
                </div>
              </div>
            </div>
          </div>

          <div class="mt-8 mb-4">
            <h3 class="mt-4 text-lg leading-6 font-medium text-gray-900">
              Email Template:
            </h3>
            <p class="mt-1 text-sm text-gray-500">
              Customize the email template for a booking.
              <br>
              This will populate the email shown to people booking a slot.
            </p>
          </div>


          <div class="mt-5 md:mt-0 md:col-span-2">
            <div class="grid grid-cols-3 gap-6">
              <div class="col-span-3 sm:col-span-2 my-2">
                <div>
                  <%= form.label "Email template subject line", class: "block text-sm font-medium text-gray-700" %>
                  <div class="mt-1 flex rounded-md shadow-sm">
                    <%= form.text_field :email_template_subject, placeholder: "Example: Advertising in #{@newsletter.name}", class: "mt-1 focus:ring-indigo-500 focus:border-indigo-500 block w-full shadow-sm sm:text-sm border-gray-300 rounded-md" %>
                  </div>
                </div>
              </div>
            </div>

            <div class="mt-5 md:mt-0 md:col-span-2">
              <div class="grid grid-cols-3 gap-6">
                <div class="col-span-3 sm:col-span-2 my-2">
                  <div>
                    <%= form.label "Email template body", class: "block text-sm font-medium text-gray-700" %>
                    <div class="mt-1">
                      <%= form.text_area :email_template_body, onfocus: 'this.style.height = "";this.style.height = this.scrollHeight + "px"', placeholder: "", class: "h-120 shadow-sm focus:ring-indigo-500 focus:border-indigo-500 block w-full sm:text-sm border border-gray-300 rounded-md" %>
                    </div>
                    <p class="mt-2 text-sm text-gray-500">
                      The slot type and publish date get automatically inserted for you.
                    </p>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <div class="mt-8 flex justify-end">
        <%= link_to 'Back', new_newsletter_slot_path(@newsletter), class: "bg-white py-2 px-4 border border-gray-300 rounded-md shadow-sm text-sm font-medium text-gray-700 hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
        <%= form.submit "Add slot type", class: "ml-3 inline-flex justify-center py-2 px-4 border border-transparent shadow-sm text-sm font-medium rounded-md text-white bg-green-600 hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-green-500" %>
      </div>

    </div>
  </div>

<% end %>