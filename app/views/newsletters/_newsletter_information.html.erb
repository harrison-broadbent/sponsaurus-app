<div class="display-card">
  <div class="display-card__data">
    <h2 class="font-semibold"><%= newsletter.name %></h2>
    <p>Statistics: <%= newsletter.statistics %></p>
    <p>Information: <%= newsletter.information %></p>
  </div>

  <div class="display-card__links">
    <% if current_user_owns_newsletter?(newsletter) %>
      <%= link_to 'Edit', edit_newsletter_path(newsletter) %>
      <%= link_to "View slots for #{newsletter.name}", pretty_newsletter_slots_path(newsletter) %>
    <% end %>
  </div>

</div>
</div>